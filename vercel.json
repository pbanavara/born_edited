{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "env": {
    "NEXT_PUBLIC_OPENAI_API_KEY": "@openai_api_key"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_OPENAI_API_KEY": "@openai_api_key"
    }
  }
} 